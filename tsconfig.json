{
	"compilerOptions": {
		"target": "ES6",
		"outDir": "./dist",
		"baseUrl": "./src",
		"moduleResolution": "Classic",
		"module": "UMD",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"sourceMap": true,
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"forceConsistentCasingInFileNames": true,
		"alwaysStrict": true,
		"isolatedModules": true
	},
	"include": ["./src/**/*.ts"]
}
